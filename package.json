{
  "name": "extramark",
  "version": "0.1.0",
  "description": "CommonMark superset with the most widely used syntax extensions",
  "keywords": [
    "markdown",
    "commonmark"
  ],
  "author": "MÃ¡rton Visnovitz <vimtaai@inf.elte.hu>",
  "license": "MIT",
  "module": "src/index.js",
  "main": "lib/extramark.js",
  "browser": "dist/extramark.min.js",
  "bin": "bin/extramark.js",
  "repository": "github:vimtaai/extramark",
  "homepage": "https://github.com/vimtaai/extramark#readme",
  "bugs": "https://github.com/vimtaai/extramark/issues",
  "scripts": {
    "build:node": "rollup --config --environment TARGET:node",
    "build:browser": "rollup --config --environment TARGET:browser,BUILD:production",
    "build:browser:dev": "rollup --config --environment TARGET:browser",
    "watch:node": "rollup --config --environment TARGET:node --watch",
    "watch:browser": "rollup --config --environment TARGET:browser --watch",
    "prepare": "npm run build:node && npm run build:browser && npm run build:browser:dev"
  },
  "dependencies": {
    "commander": "^2.20.0",
    "common-tags": "^1.8.0",
    "critic-markup": "^0.3.0",
    "fs-extra": "^8.0.1",
    "markdown-it": "^8.4.2",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-anchor": "^5.2.4",
    "markdown-it-deflist": "^2.0.3",
    "markdown-it-footnote": "^3.0.1",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "rollup": "^1.15.6",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^5.0.3",
    "rollup-plugin-terser": "^5.0.0"
  },
  "prettier": {
    "printWidth": 100
  }
}
